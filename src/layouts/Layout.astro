---
// src/layouts/Layout.astro
import Header from '../components/Header.astro';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Meta SEO -->
  <title>Tu Carrera en Marcha - Estrategias de Empleo</title>
  <meta name="description" content="Transforma tu búsqueda de empleo con estrategias personalizadas. Deja de enviar currículums al vacío y consigue entrevistas en empresas de tu sector.">
  
  <!-- Open Graph -->
  <meta property="og:title" content="Tu Carrera en Marcha">
  <meta property="og:description" content="Estrategias efectivas para tu búsqueda de empleo">
  <meta property="og:type" content="website">
  
  <!-- Tipografía Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <style>
    :root {
      font-family: 'Inter', system-ui, sans-serif;
    }
    @supports (font-variation-settings: normal) {
      :root { font-family: 'Inter var', system-ui, sans-serif; }
    }
  </style>
</head>
<body class="min-h-screen w-full bg-white relative">

  {/* Pink Glow Background */}
  <div
    class="absolute inset-0 z-0"
    style={{
      backgroundImage: `
        radial-gradient(125% 125% at 50% 90%, #ffffff 40%, #ec4899 100%)
      `,
      backgroundSize: "100% 100%",
    }}
  />
  {/* Your Content/Components */}

  <Header />
  <slot />

  
  <!-- Script de animaciones -->
  <script is:inline src="/scripts/animations.js"></script>
</body>
</html>