---
// src/layouts/Layout.astro
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Meta SEO -->
  <title>Tu Carrera en Marcha - Estrategias de Empleo</title>
  <meta name="description" content="Transforma tu búsqueda de empleo con estrategias personalizadas. Deja de enviar currículums al vacío y consigue entrevistas en empresas de tu sector.">
  
  <!-- Open Graph -->
  <meta property="og:title" content="Tu Carrera en Marcha">
  <meta property="og:description" content="Estrategias efectivas para tu búsqueda de empleo">
  <meta property="og:type" content="website">
  
  <!-- Tipografía Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <style>
    :root {
      font-family: 'Inter', system-ui, sans-serif;
    }
    @supports (font-variation-settings: normal) {
      :root { font-family: 'Inter var', system-ui, sans-serif; }
    }
  </style>
</head>
<body class="min-h-screen">
  <slot />
  
  <!-- Script de animaciones -->
  <script is:inline src="/scripts/animations.js"></script>
</body>
</html>